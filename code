int PIN = D1;

void setup() {
    pinMode(PIN, INPUT);
}

void loop() {
    String movement;
    if(digitalRead(PIN) == HIGH)
    {
        movement = "1";
        Particle.publish("movement", movement, PRIVATE);
        
    } else { 
        movement = "0";
        Particle.publish("movement", movement, PRIVATE);
    }
    delay(30000);

}
